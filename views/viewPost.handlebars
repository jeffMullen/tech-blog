<div class="container post">
    <div class="row post-heading">
        <h2 class="col-8">{{post.title}}</h2>
        <p class="col-4">Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
    </div>
    <div class="row">
        <p class="col-12">{{post.content}}</p>
    </div>
</div>
<div class="container">
    <div class="post-heading">
        <form>
            <div class="form-group">
                <label for="commentContent">Comment</label>
                <textarea type="text" class="form-control" id="commentContent"></textarea>
                <button id="commentSubmit" class="btn btn-success" data-post-id="{{post.id}}"
                    data-user-id="{{userId}}">Submit Comment</button>
            </div>
        </form>
    </div>
</div>

{{#each post.comments as |comment|}}
{{> comments}}
{{/each}}

<script src="/js/comment.js"></script>